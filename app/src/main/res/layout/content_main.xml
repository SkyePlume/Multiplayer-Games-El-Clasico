<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Please Don't Touch The Grind Until You Have Connected With A Player"
        android:background="@drawable/blue"/>
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3">

        <ImageButton
            android:id="@+id/sq_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/topleft"/>

        <ImageButton
            android:id="@+id/sq_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/topcentre"/>

        <ImageButton
            android:id="@+id/sq_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/topright"/>

        <ImageButton
            android:id="@+id/sq_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/middleleft"/>

        <ImageButton
            android:id="@+id/sq_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/middlecentre"/>

        <ImageButton
            android:id="@+id/sq_6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/middleright"/>

        <ImageButton
            android:id="@+id/sq_7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bottomleft"/>

        <ImageButton
            android:id="@+id/sq_8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bottomcentre"/>

        <ImageButton
            android:id="@+id/sq_9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bottomright"/>
    </GridLayout>
</FrameLayout>
